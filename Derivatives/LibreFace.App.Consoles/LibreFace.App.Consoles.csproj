<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0-windows</TargetFramework>
        <OutputType>Exe</OutputType>
        <Platforms>x64</Platforms>
        <PlatformTarget>x64</PlatformTarget>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <RootNamespace>LibreFace.App.Consoles</RootNamespace>
        <AssemblyName>LibreFace.App.Consoles</AssemblyName>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyTitle>LibreFace Console Application</AssemblyTitle>
        <Copyright>Copyright (C) 2023 Intelligent Human Perception Lab, USC</Copyright>
        <Company>Intelligent Human Perception Lab, USC</Company>
        <AssemblyVersion>1.1.0</AssemblyVersion>
        <Version>1.1.0</Version>
        <PackageReleaseNotes>RELEASE_NOTES.md</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.9.1" />
        <PackageReference Include="Spectre.Console" Version="0.48.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\LibreFace.App.Core\LibreFace.App.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="RELEASE_NOTES.md" Pack="true" PackagePath="">
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        </None>
    </ItemGroup>

</Project>
