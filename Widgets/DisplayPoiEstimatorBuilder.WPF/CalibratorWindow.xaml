<Window
    x:Class="OpenSense.WPF.Widgets.DisplayPoiEstimatorBuilder.CalibratorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:OpenSense.WPF.Widgets.DisplayPoiEstimatorBuilder"
    mc:Ignorable="d"
    Title="OpenSense GazeCalibrator"
    SizeToContent="WidthAndHeight"
    FontSize="14"
    Height="213"
    Width="516"
    Loaded="Window_Loaded">
    <Window.Resources>
        <BooleanToVisibilityConverter
            x:Key="b2v" />
    </Window.Resources>
    <TabControl
        Grid.Row="1">
        <TabItem
            Header="Camera">
            <Grid
                Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0">
                    Webcam
                </Label>
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Name="ComboBoxWebcam"
                    SelectedIndex="0"
                    SelectionChanged="ComboBoxWebcam_SelectionChanged" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0">
                    Resolution
                </Label>
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Name="ComboBoxResolution"
                    ItemsSource="{Binding ElementName=ComboBoxWebcam, Path=SelectedItem.Resolutions}"
                    SelectedIndex="0" />

                <Label
                    Grid.Row="2"
                    Grid.Column="0">
                    Flip Image
                </Label>
                <WrapPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Center">
                    <CheckBox
                        Name="CheckBoxFlipX">
                        X
                    </CheckBox>
                    <CheckBox
                        Name="CheckBoxFlipY"
                        Margin="10,0,0,0">
                        Y
                    </CheckBox>
                </WrapPanel>

                <Label
                    Grid.Row="3"
                    Grid.Column="0">
                    Calibration
                </Label>
                <Grid
                    Grid.Row="3"
                    Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="auto" />
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="auto" />
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="auto" />
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="auto" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--Kinect V2 RGB Cam-->
                    <TextBlock
                        Grid.Column="0">
                        Fx
                    </TextBlock>
                    <TextBox
                        Grid.Column="1"
                        Name="TextBoxCamFx">
                        1057.58
                    </TextBox>
                    <TextBlock
                        Grid.Column="2">
                        Fy
                    </TextBlock>
                    <TextBox
                        Grid.Column="3"
                        Name="TextBoxCamFy">
                        1055.33
                    </TextBox>
                    <TextBlock
                        Grid.Column="4">
                        Cx
                    </TextBlock>
                    <TextBox
                        Grid.Column="5"
                        Name="TextBoxCamCx">
                        971.26
                    </TextBox>
                    <TextBlock
                        Grid.Column="6">
                        Cy
                    </TextBlock>
                    <TextBox
                        Grid.Column="7"
                        Name="TextBoxCamCy">
                        538.00
                    </TextBox>
                </Grid>

            </Grid>
        </TabItem>
        <TabItem
            Header="Capture">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition
                        Width="*"
                        MinWidth="100" />
                    <ColumnDefinition
                        Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0">
                    One-way Duration
                </Label>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Name="TextBoxDuration"
                    VerticalAlignment="Center">
                    20
                </TextBox>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    VerticalAlignment="Center">
                    seconds
                </TextBlock>

                <Button
                    Grid.Row="1"
                    Grid.ColumnSpan="4"
                    Name="ButtonCapture"
                    IsDefault="True"
                    Click="ButtonCapture_Click">
                    Launch
                </Button>
            </Grid>
        </TabItem>
        <TabItem
            Header="Train"
            Name="TabItemRegression">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition
                        Width="*"
                        MinWidth="200" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0">
                    # Data Points
                </Label>
                <Grid
                    Grid.Row="0"
                    Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition
                            Width="auto" />
                        <ColumnDefinition
                            Width="auto" />
                        <ColumnDefinition
                            Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="{Binding Path=Count}" />
                    <Button
                        Grid.Column="1"
                        Name="ButtonSaveDataPoints"
                        Click="ButtonSaveDataPoints_Click">
                        Save
                    </Button>
                    <Button
                        Grid.Column="2"
                        Name="ButtonLoadDataPoints"
                        Click="ButtonLoadDataPoints_Click">
                        Load
                    </Button>
                    <Button
                        Grid.Column="3"
                        Name="ButtonClearDataPoints"
                        Click="ButtonClearDataPoints_Click">
                        Clear
                    </Button>
                </Grid>

                <Label
                    Grid.Row="1"
                    Grid.Column="0">
                    Estimator Type
                </Label>
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Name="ComboBoxTrainModelType">
                    <ComboBoxItem
                        IsSelected="True">
                        End-to-end Regression
                    </ComboBoxItem>
                    <ComboBoxItem
                        Name="ComboBoxItemSpatialTracking">
                        Spatial Tracking
                    </ComboBoxItem>
                </ComboBox>

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Visibility="{Binding ElementName=ComboBoxItemSpatialTracking, Path=IsSelected, Converter={StaticResource b2v}}">
                    Special data points required
                </Label>

                <!--
                <Label Grid.Row="2" Grid.Column="0" 
                       Visibility="{Binding ElementName=ComboBoxItemTwoStage, Path=IsSelected, Converter={StaticResource b2v}}"
                       >Screen size</Label>
                <Grid Grid.Row="2" Grid.Column="1" 
                      Visibility="{Binding ElementName=ComboBoxItemTwoStage, Path=IsSelected, Converter={StaticResource b2v}}"
                      >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" >width</TextBlock>
                    <TextBox Grid.Column="1" Name="TextBoxScreenWidth" ToolTip="millimeter"/>
