                    <TextBox Grid.Column="1" Name="TextBoxScreenPitch" ToolTip="radian"/>
                    <TextBlock Grid.Column="2">Yaw</TextBlock>
                    <TextBox Grid.Column="3" Name="TextBoxScreenYaw" ToolTip="radian"/>
                    <TextBlock Grid.Column="4">Roll</TextBlock>
                    <TextBox Grid.Column="5" Name="TextBoxScreenRoll" ToolTip="radian"/>
                </Grid>
                -->
                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    Visibility="{Binding ElementName=ComboBoxItemSpatialTracking, Path=IsSelected, Converter={StaticResource b2v}}">
                    Polynomial Order
                </Label>
                <TextBox
                    Grid.Row="5"
                    Grid.Column="1"
                    Name="TextBoxPolyOrder"
                    Visibility="{Binding ElementName=ComboBoxItemSpatialTracking, Path=IsSelected, Converter={StaticResource b2v}}">
                    2
                </TextBox>

                <CheckBox
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Name="CheckBoxSaveEstimator"
                    IsChecked="False">
                    Save as
                </CheckBox>

                <Label
                    Grid.Row="7"
                    Grid.Column="0"
                    Visibility="{Binding ElementName=CheckBoxSaveEstimator, Path=IsChecked, Converter={StaticResource b2v}}">
                    Save as
                </Label>
                <Grid
                    Grid.Row="7"
                    Grid.Column="1"
                    Visibility="{Binding ElementName=CheckBoxSaveEstimator, Path=IsChecked, Converter={StaticResource b2v}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition
                            Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Name="TextBoxEstimatorFilename">poi-on-display-estimator.poi_param.json</TextBox>
                    <Button
                        Grid.Column="1"
                        Name="ButtonEstimatorFilename"
                        Click="ButtonEstimatorFilename_Click">
                        Select
                    </Button>
                </Grid>

                <Button
                    Grid.Row="8"
                    Grid.ColumnSpan="2"
                    Name="ButtonRegression"
                    IsDefault="True"
                    Click="ButtonRegression_Click">
                    Compute
                </Button>
            </Grid>
        </TabItem>
        <TabItem
            Header="Test"
            Name="TabItemTest">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition
                        Width="*"
                        MinWidth="300" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0">
                    Converter Name
                </Label>

                <Grid
                    Grid.Row="0"
                    Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition
                            Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Name="TextBlockModel"
                        Text="{Binding Name}" />
                    <Button
                        Grid.Column="1"
                        Name="ButtonLoadModel"
                        Click="ButtonLoadModel_Click">
                        Load
                    </Button>
                </Grid>

                <Label
                    Grid.Row="1"
                    Grid.Column="0">
                    Temporarily Mirror
                </Label>
                <CheckBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Name="CheckBoxNegateFlipX"
                    IsChecked="True">
                    (by negating Flip X)
                </CheckBox>

                <Button
                    Grid.Row="2"
                    Grid.ColumnSpan="4"
                    Name="ButtonPredict"
                    IsDefault="True"
                    Click="ButtonPredict_Click">
                    Launch
                </Button>
            </Grid>
        </TabItem>
        <TabItem
            Header="About"
            IsSelected="True">
            <ScrollViewer
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <GroupBox
                        Header="Direction">
                        <StackPanel>
                            <TextBlock>
                                Capture: Click somewhere or press Enter to start and exit.
                            </TextBlock>
                            <TextBlock>
                                Train: (X, Y) R-squared showed separately. The closer to 1.00, the better quality.
                            </TextBlock>
                            <TextBlock>
                                Test: Click somewhere or press Enter to exit.
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>
