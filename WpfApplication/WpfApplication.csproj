    <Target Name="BuildPlugins" BeforeTargets="BeforeBuild">
        <PropertyGroup>
            <!-- Set plugin output folder. $(OutDir) only contains value after a certain stage, so we have to define this property at here. -->
            <PluginGatherDir>$(OutDir)$(OpenSensePluginRootPath)</PluginGatherDir>
        </PropertyGroup>

        <CreateProperty Value="@(OpenSensePluginProject-&gt;Count())">
            <Output TaskParameter="Value" PropertyName="NumberOfPluginProjects" />
        </CreateProperty>

        <!-- Initialize an empty PluginOutDir to collect the output DLL paths. Only this information can be collected from MSBuild. -->
        <ItemGroup>
            <PluginTargetOutput />
        </ItemGroup>

        <Message Text="Building $(NumberOfPluginProjects) plugin(s)..." Importance="high" />

        <!-- https://learn.microsoft.com/en-us/visualstudio/msbuild/msbuild-task -->
        <MSBuild Projects="@(OpenSensePluginProject)" Targets="Build" StopOnFirstFailure="true">
            <Output TaskParameter="TargetOutputs" ItemName="PluginTargetOutput" />
        </MSBuild>

        <ItemGroup>
            <!-- Convert output DLL path to its folder. -->
            <PluginOutDir Include="@(PluginTargetOutput->'%(RootDir)%(Directory)')" />
        </ItemGroup>

        <!-- List files, as Copy does not support folders and wildcards. The special syntax was referenced from here https://learn.microsoft.com/en-us/dotnet/api/microsoft.build.tasks.createitem.additionalmetadata#remarks. -->
        <CreateItem Include="@(PluginOutDir->'%(FullPath)**\*')" AdditionalMetadata="@(OpenSensePluginAssetBundleName->'OpenSensePluginAssetBundleName=%(OpenSensePluginAssetBundleName)\')">
            <Output ItemName="PluginFilesToCopy" TaskParameter="Include" />
        </CreateItem>

        <ItemGroup>
            <!-- We could not change Metadata name in CreateItem, so we convert it at here. -->
            <PluginFilesToCopy>
                <PluginAssetBundlePath>%(OpenSensePluginAssetBundleName)\</PluginAssetBundlePath>
            </PluginFilesToCopy>
        </ItemGroup>

        <CreateProperty Value="@(PluginFilesToCopy-&gt;Count())">
            <Output TaskParameter="Value" PropertyName="NumberOfPluginFilesToCopy" />
        </CreateProperty>

        <Message Text="Copying $(NumberOfPluginFilesToCopy) file(s)..." Importance="high" />

        <Copy SourceFiles="@(PluginFilesToCopy)" DestinationFolder="$(PluginGatherDir)%(PluginAssetBundlePath)%(RecursiveDir)" />
    </Target>
