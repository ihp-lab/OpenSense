<UserControl
    x:Class="OpenSense.WPF.Components.MediaPipe.NET.OutputStreamConfigurationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenSense.WPF.Components.MediaPipe.NET"
    xmlns:comp="clr-namespace:OpenSense.Components.MediaPipe.NET;assembly=OpenSense.Components.MediaPipe.NET"
    xmlns:util="clr-namespace:OpenSense.WPF.Components.Utilities;assembly=OpenSense.WPF.Components.Contracts"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <UserControl.Resources>
        <x:Array
            x:Key="arrayPacketTypes"
            Type="{x:Type comp:PacketType}">
            <!--Note: Only supported types are added here.-->
            <comp:PacketType>NormalizedLandmarkListVector</comp:PacketType>
        </x:Array>
    </UserControl.Resources>
    <Grid>
        <d:Grid.DataContext>
            <comp:OutputStreamConfiguration />
        </d:Grid.DataContext>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0">
            Identifier
        </TextBlock>
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding Identifier}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0">
            Data Type
        </TextBlock>
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            ItemsSource="{Binding Source={StaticResource arrayPacketTypes},Mode=OneTime}"
            SelectedItem="{Binding PacketType}" />
    </Grid>
</UserControl>
