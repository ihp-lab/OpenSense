<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>OpenSense.Components.OpenCvSharp</RootNamespace>
        <AssemblyName>OpenSense.Components.OpenCvSharp</AssemblyName>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <EmbedAllSources>true</EmbedAllSources>
        <EnableDynamicLoading>true</EnableDynamicLoading>
        <AssemblyVersion>1.0.2</AssemblyVersion>
        <Version>1.0.2</Version>
        <Authors>Intelligent Human Perception Lab</Authors>
        <Product>OpenSense</Product>
        <Description>
            OpenSense OpenCvSharp wrappers.
        </Description>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageReleaseNotes>RELEASE_NOTES.md</PackageReleaseNotes>
        <RepositoryUrl>https://github.com/ihp-lab/OpenSense.git</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Include="$(SolutionDir)/LICENSE.txt" Pack="true" PackagePath="" />
        <None Include="README.md" Pack="true" PackagePath="" />
        <None Include="RELEASE_NOTES.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.1" />
        <PackageReference Include="Microsoft.Psi.Imaging" Version="0.19.100.1-beta" />
        <PackageReference Include="OpenCvSharp4" Version="4.9.0.20240103" />
        <PackageReference Include="System.Composition" Version="8.0.0">
            <!-- The DLLs of this dependency will be fulfilled by the host application and will be shared across all AssemblyLoadContexts. Do not generate private copies of these DLLs. -->
            <ExcludeAssets>runtime</ExcludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\ComponentContract\ComponentContract.csproj">
            <!-- The DLLs of this dependency will be fulfilled by the host application and will be shared across all AssemblyLoadContexts. Do not generate private copies of these DLLs. -->
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
        </ProjectReference>
    </ItemGroup>

</Project>
