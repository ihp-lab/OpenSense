<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0-windows;net48</TargetFrameworks>
        <AssemblyName>OpenSense.Components.Psi.Speech.Windows</AssemblyName>
        <RootNamespace>OpenSense.Components.Psi.Speech</RootNamespace>
        <LangVersion>latest</LangVersion>
        <EmbedAllSources>true</EmbedAllSources>
        <EnableDynamicLoading>true</EnableDynamicLoading>
    </PropertyGroup>

    <ItemGroup>
        <!--Indirect referencing this package by Microsoft.Psi.Speech.Windows does not work-->
        <PackageReference Include="Microsoft.Psi.Language" Version="0.19.100.1-beta" />
        <PackageReference Include="Microsoft.Psi.Speech.Windows" Version="0.19.100.1-beta">
            <!--Only a .net framework package is available-->
            <NoWarn>NU1701</NoWarn>
        </PackageReference>
        <PackageReference Include="System.Composition" Version="8.0.0">
            <!-- The DLLs of this dependency will be fulfilled by the host application and will be shared across all AssemblyLoadContexts. Do not generate private copies of these DLLs. -->
            <ExcludeAssets>runtime</ExcludeAssets>
        </PackageReference>
        <!--System.Speech does not exist in .net core. Later this package was published, made it is possible to port the project to .net core. The new Windows Compatibility Pack can be an alternitave-->
        <PackageReference Include="System.Speech" Version="8.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\ComponentContract\ComponentContract.csproj">
            <!-- The DLLs of this dependency will be fulfilled by the host application and will be shared across all AssemblyLoadContexts. Do not generate private copies of these DLLs. -->
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
        </ProjectReference>
    </ItemGroup>

</Project>
