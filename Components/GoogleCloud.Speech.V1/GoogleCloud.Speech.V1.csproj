<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!-- Note: We have multiple target frameworks, because the package Google.Cloud.Speech.V1's dependency. -->
        <TargetFrameworks>netstandard2.1;net48</TargetFrameworks>
        <AssemblyName>OpenSense.Components.GoogleCloud.Speech.V1</AssemblyName>
        <RootNamespace>OpenSense.Components.GoogleCloud.Speech.V1</RootNamespace>
        <LangVersion>latest</LangVersion>
        <EmbedAllSources>true</EmbedAllSources>
        <EnableDynamicLoading>true</EnableDynamicLoading>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.1" />
        <PackageReference Include="Microsoft.Psi.Speech" Version="0.19.100.1-beta" />
        <PackageReference Include="Google.Cloud.Speech.V1" Version="3.6.0" />
        <PackageReference Include="System.Composition" Version="8.0.0">
            <!-- The DLLs of this dependency will be fulfilled by the host application and will be shared across all AssemblyLoadContexts. Do not generate private copies of these DLLs. -->
            <ExcludeAssets>runtime</ExcludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\ComponentContract\ComponentContract.csproj">
            <!-- The DLLs of this dependency will be fulfilled by the host application and will be shared across all AssemblyLoadContexts. Do not generate private copies of these DLLs. -->
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
        </ProjectReference>
    </ItemGroup>

</Project>
