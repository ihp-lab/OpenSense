<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <RootNamespace>OpenSense.Components.OpenCvSharp</RootNamespace>
        <AssemblyName>OpenSense.Components.OpenCvSharp.Windows</AssemblyName>
        <LangVersion>latest</LangVersion>
        <EmbedAllSources>true</EmbedAllSources>
        <AssemblyVersion>1.0.1</AssemblyVersion>
        <Version>1.0.1</Version>
        <Authors>Intelligent Human Perception Lab</Authors>
        <Product>OpenSense</Product>
        <Description>
            Bundle of OpenSense OpenCvSharp wrapper and OpenCvSharp Windows runtime.
        </Description>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/ihp-lab/OpenSense.git</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Include="$(SolutionDir)/LICENSE.txt" Pack="true" PackagePath="" />
        <None Include="README.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="OpenCvSharp4.runtime.win" Version="4.9.0.20240103" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\OpenCvSharp\OpenCvSharp.csproj" />
    </ItemGroup>

</Project>
