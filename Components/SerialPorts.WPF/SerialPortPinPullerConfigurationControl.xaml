<UserControl
    x:Class="OpenSense.WPF.Components.SerialPorts.SerialPortPinPullerConfigurationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenSense.WPF.Components.SerialPorts"
    xmlns:comp="clr-namespace:OpenSense.Components.SerialPorts;assembly=OpenSense.Components.SerialPorts"
    xmlns:util="clr-namespace:OpenSense.WPF.Components.Utilities;assembly=OpenSense.WPF.Components.Contracts"
    xmlns:ports="clr-namespace:System.IO.Ports;assembly=System.IO.Ports"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <d:UserControl.DataContext>
        <comp:SerialPortPinPullerConfiguration />
    </d:UserControl.DataContext>
    <UserControl.Resources>
        <ObjectDataProvider
            x:Key="PortNamesProvider"
            ObjectType="{x:Type ports:SerialPort}"
            MethodName="GetPortNames"
        />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0">
            Port Name
        </TextBlock>
        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            SelectedItem="{Binding PortName}"
            ItemsSource="{Binding Source={StaticResource PortNamesProvider}}"
        />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0">
            Data Terminal Ready (DTR)
        </TextBlock>

        <TextBlock
            Grid.Row="2"
            Grid.Column="0">
            Pull Up on Start
        </TextBlock>
        <CheckBox
            Grid.Row="2"
            Grid.Column="1"
            IsChecked="{Binding PullUpDtrOnStart}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0">
            Use Source Originating Time
        </TextBlock>
        <CheckBox
            Grid.Row="3"
            Grid.Column="1"
            IsChecked="{Binding DtrUseSourceOriginatingTime}" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0">
            Request To Send (RTS)
        </TextBlock>

        <TextBlock
            Grid.Row="5"
            Grid.Column="0">
            Pull Up on Start
        </TextBlock>
        <CheckBox
            Grid.Row="5"
            Grid.Column="1"
            IsChecked="{Binding PullUpRtsOnStart}" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0">
            Use Source Originating Time
        </TextBlock>
        <CheckBox
            Grid.Row="6"
            Grid.Column="1"
            IsChecked="{Binding RtsUseSourceOriginatingTime}" />

    </Grid>
</UserControl>
