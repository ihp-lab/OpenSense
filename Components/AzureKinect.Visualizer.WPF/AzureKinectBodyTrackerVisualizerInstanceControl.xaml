<UserControl
    x:Class="OpenSense.WPF.Components.AzureKinect.Visualizer.AzureKinectBodyTrackerVisualizerInstanceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:OpenSense.WPF.Components.AzureKinect.Visualizer"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <local:AzureKinectBodyTrackerVisualizerConfigurationControl />
        <!--names of params are the same, reuse available-->

        <Grid
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label>Frame Rate:</Label>
                <TextBlock
                    Grid.Column="1"
                    Text="{Binding FrameRate}" />
            </Grid>
            <Image
                Grid.Row="1"
                Source="{Binding Path=Image}" />
        </Grid>
    </Grid>
</UserControl>
