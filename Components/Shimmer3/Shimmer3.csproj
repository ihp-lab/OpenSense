<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>OpenSense.Components.Shimmer3</RootNamespace>
        <AssemblyName>OpenSense.Components.Shimmer3</AssemblyName>
        <LangVersion>latest</LangVersion>
        <EmbedAllSources>true</EmbedAllSources>
        <EnableDynamicLoading>true</EnableDynamicLoading>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.1" />
        <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
        <PackageReference Include="System.Composition" Version="8.0.0">
            <!-- The DLLs of this dependency will be fulfilled by the host application and will be shared across all AssemblyLoadContexts. Do not generate private copies of these DLLs. -->
            <ExcludeAssets>runtime</ExcludeAssets>
        </PackageReference>
        <PackageReference Include="System.IO.Ports" Version="8.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\ComponentContract\ComponentContract.csproj">
            <!-- The DLLs of this dependency will be fulfilled by the host application and will be shared across all AssemblyLoadContexts. Do not generate private copies of these DLLs. -->
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="ShimmerAPI">
            <HintPath>lib\ShimmerAPI.dll</HintPath>
        </Reference>
        <Reference Include="ShimmerClosedLibraryRev0_5">
            <HintPath>lib\ShimmerClosedLibraryRev0_5.dll</HintPath>
        </Reference>
    </ItemGroup>

</Project>
