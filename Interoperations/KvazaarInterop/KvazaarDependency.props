<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros" />
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>$(SolutionDir)\Shared\lib\kvazaar\default\include</AdditionalIncludeDirectories>
      <!--
           
        KVZ_BIT_DEPTH:
        - Default is 8-bit if not defined, any other value will cause internal data type to be 16-bit.
        - Should align with the build configuration.
        
        KVZ_STATIC_LIB:
        - Documented in Kvazaar README
        
        _WINDLL:
        - Auto-generated by Visual Studio for DLL projects
      -->
      <PreprocessorDefinitions>KVZ_BIT_DEPTH=16;KVZ_STATIC_LIB;_WINDLL;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
    <Link>
      <AdditionalLibraryDirectories>$(SolutionDir)\Shared\lib\kvazaar\default\lib\$(Platform)\$(Configuration);%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
      <AdditionalDependencies>kvazaar_lib.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
</Project>